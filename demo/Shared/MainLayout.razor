@code {
    public AppDrawer AppDrawer { get; set; }

    private bool modalOnly;
    public bool ModalOnly
    {
        get => modalOnly;
        set 
        {
            modalOnly = value;
            StateHasChanged();
        }
    }

    private bool hasHeader = true;
    public bool HasHeader
    {
        get => hasHeader;
        set 
        {
            hasHeader = value;
            StateHasChanged();
        }
    }

    private bool scrollableHeader;
    public bool ScrollableHeader
    {
        get => scrollableHeader;
        set 
        {
            scrollableHeader = value;
            StateHasChanged();
        }
    }

    private bool useHeaderImage = true;
    public bool UseHeaderImage
    {
        get => useHeaderImage;
        set 
        {
            useHeaderImage = value;
            StateHasChanged();
        }
    }

    private AppDrawer.BackgroundImageColorDirections backgroundImageColorDirection = AppDrawer.BackgroundImageColorDirections.TopToBottom;
    public AppDrawer.BackgroundImageColorDirections BackgroundImageColorDirection
    {
        get => backgroundImageColorDirection;
        set 
        {
            backgroundImageColorDirection = value;
            StateHasChanged();
        }
    }

    private string backgroundImageStartColor = "#052767";
    public string BackgroundImageStartColor
    {
        get => backgroundImageStartColor;
        set 
        {
            backgroundImageStartColor = value;
            StateHasChanged();
        }
    }

    private string backgroundImageEndColor = "#3a0647";
    public string BackgroundImageEndColor
    {
        get => backgroundImageEndColor;
        set 
        {
            backgroundImageEndColor = value;
            StateHasChanged();
        }
    }
}